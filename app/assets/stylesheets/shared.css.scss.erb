@import 'mixins.scss';

.headAva {
    img {
        height: 32px;
        width: 32px;
        border-radius: 20px;
        position: relative;
        top: 8px;
        float: left;
        margin: 0 5px 0 0;
        background: #fff;
    }
    i {
        margin-top: 8px;
    }
    &.hovered{
        color: #fff;
        background: $titleousBack;
    }
}

.headAva.hovered, #mainMenu.hovered {
    ul {
        display: block !important;
    }
}

#topHead {
    height: 50px;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: $topHeadBack;
    border-bottom: 1px solid darken($topHeadBack, 10%);
    z-index: 10000;
    box-shadow: 0 2px 2px -2px rgba(0, 0, 0, .52);
    .container_12{
        position: relative;
        padding:0;
    }
    a, .mobileMenu {
        height: 49px;
        float: left;
        color: #fff;
        @include transitions(.15s);
        text-decoration: none;
        @media screen and (min-width: 961px){
            &:hover {
                color: #fff;
                background: $titleousBack;
            }
        }
        @media screen and (max-width: 960px){
            &:active {
                color: #fff;
                background: $titleousBack;
            }
        }
        @media screen and (min-width: 401px){
            padding: 0 8px;
        }
        @media screen and (max-width: 400px){
            padding: 0 5px;
        }
    }
    li {
        float: left;
        font-size: 0.875em;
        line-height: 3.7em;
    }
    ul ul {
        background: $topHeadBack;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        position: absolute;
        display: none;
        top: 49px;
        right: 0;
        width: 145px;
        font-size: 1.125em;
        li {
            width: 150px;
        }
        a, li {
            width: 150px;
        }
    }
    i {
        color: inherit;
        width:1em;
    }
    .icon-lightbulb {
        margin-left: -5px;
        font-size: 1.312em;
        top: 1px;
        position: relative;
    }
    @media screen and (min-width: 601px){
        .right{
            i{
                display: none;
            }
            span{
                display: inline;
            }
        }
    }
    @media screen and (max-width: 600px){
        .right{
            i{
                display: inline;
            }
            span{
                display: none;
            }
        }
    }
}

#mainMenu.hovered {
    .mobileMenu{
        background: $titleousBack;
    }
}

@media screen and (min-width: 961px){
    #mainMenu {
        ul{
            display: block;
            i{
                display: none!important
            }
        }
    }
    .mobileMenu{
        display: none;
    }
}

@media screen and (max-width: 960px){
    #mainMenu ul{
        display: none;
        left: 0;
        background: $topHeadBack;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        position: absolute;
        display: none;
        top: 49px;
        width:130px;
        li {
            width: 130px;
            line-height: 3.4em;
        }
        a, li {
            width: 130px;
            height:45px;
        }
    }
    .mobileMenu{
        display: block;
        padding: 0 8px!important;
    }
}

.mobileMenu{
    line-height: 3.125em;
    text-align: center;
    margin-left: 10px;
    i{
        font-size: 1.312em;
    }
}

#new_mail_count{
    i{
        position: relative;
        top: 2px;
    }
}

.home {
    &.wide{
        display:none;
        @media screen and (min-width: 961px){
            display: block;
        }
        img{
            width: 205px;
            height: 49px;
        }
    }
    &.short{
        display:block;
        padding:0 8px!important;
        @media screen and (min-width: 961px){
            display: none;
        }
        img {
            margin: 2px 0;
            width: 45px;
        }
    }
}

#mainFooter {
    border-top: 1px solid #ddd;
    padding: 10px 0 0;
    min-height: 55px;
    clear: both;
    margin-top: -55px;
    position: relative;
    font-size: 0.875em;
    div{
        width:50%;
    }
    .right{
        text-align: right;
    }
    @media screen and (min-width: 961px){
        p {
            display: inline;
        }
    }
    @media screen and (max-width: 960px){
        a{
            display: block;
            margin:0 5px;
        }
        p{
            margin:0 5px;
        }
    }
}

#toTop {
    position: fixed;
    opacity: 0;
    z-index: 10000;
    top: 0;
    left: 0;
    display: none;
    &:hover {
        opacity: .99 !important;
    }
    div {
        height: 100%;
        cursor: pointer;
        color: $topHeadBack;
        @include transitions(.15s);
        &:hover {
            background: lighten($titleousBack, 50%);
        }
    }
}

#wideTop {
    @media screen and (max-width: 1200px){
        display: none;
    }
    padding: 10px 10px 0 5px;
}

#thinTop {
    @media screen and (max-width: 1050px){
        display: none;
    }
    padding: 4px 2px;
}