//*= require outsource/reset
//*= require recaptcha
//*= require widget/fontello


*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

@font-face
  font-family: 'PT Sans'
  font-style: normal
  font-weight: 400
  src: local('PT Sans'), local('PTSans-Regular'), url('<%= asset_path('PTsans.woff') %>')

.hide
  display: none

.center
  text-align: center

body
  font: 16px 'PT Sans', Arial, sans-serif

a
  text-decoration: none

#widget_container
  border-radius: 3px
  background: #fff
  overflow: hidden

header
  background: #009775
  color: #FFF
  border-radius: 3px 3px 0 0
  overflow: hidden
  z-index: 1
  position: relative

.header_title
  color: #FFF
  height: 35px
  float: left
  line-height: 37px
  font-size: 1em

.logo
  height: 35px
  float: left
  padding: 0 4px 0 6px
  img
    margin: 8px 0
    width: 142px

#opinion_container, .loadContainer
  padding: 6px 7px 10px
  margin-top: -1px
  border: 1px solid #d3d3d3
  border-radius: 0 0 3px 3px
  overflow: hidden
  z-index: 0
  position: relative
  .recaptchatable
    border: none !important
    margin: 0 auto!important

h2
  font-size: 1em
  line-height: 1.2em

#results
  margin-top: 5px

#bar_container
  overflow: hidden
  width: 100%
  height: 36px

.bar
  height: 36px
  line-height: 2.25em
  &.for
    background: #3AA85D
    text-align: right
    float: left
  &.against
    background: #5D615D
    text-align: left
    float: right
  p
    padding: 0 5px
    color: #fff
  &.winner
    p
      font-size: 1.312em
      line-height: 1.9em

#votes_sum
  float: right
  margin: 2px 0 0 0

#voting
  text-align: center
  float: left
  width: 100%

.btn
  display: inline-block
  border-radius: 3px
  cursor: pointer

#voting
  .btn
    width: 50px
    height: 50px
    margin: 0 5px
    color: #FFF
    line-height: 52px
    font-size: 21px
    &.working
      cursor: pointer
    &.not_chosen
      background: #fff!important
      border: 1px solid #999 !important
      color: #999
      cursor: default
    &.chosen
      cursor: default
    &.for
      background: #3AA85D
      border: 1px solid #3AA85D
      &:hover
        background: #266f3e
      &.chosen, &.not_chosen
        &:hover
          background: #3AA85D
    &.against
      background: #5D615D
      border: 1px solid #5D615D
      &:hover
        background: #383a38
      &.chosen, &.not_chosen
        &:hover
          background: #5D615D

#sendCaptcha
  margin: 8px 0
  padding: 0 8px
  color: #25AA8A
  border: 1px solid #25AA8A
  border-radius: 3px
  &:hover
    background: #25AA8A
    color: #fff
  p,i
    height: 32px
    text-align: center
    line-height: 2.2em

.loadContainer
  a
    color: #25AA8A
    &:hover
      text-decoration: underline

.error
  clear: both
  color: #DD3131

.icon-user
  margin-left: -5px