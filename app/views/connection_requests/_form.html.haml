= form_for @connection_request do |f|
  - if @connection_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@connection_request.errors.count, "error")} prohibited this connection_request from being saved:"
      %ul
        - @connection_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :with_user_id
    = f.number_field :with_user_id
  .field
    = f.label :confirm
    = f.number_field :confirm
  .field
    = f.label :done
    = f.check_box :done
  .actions
    = f.submit 'Save'
