= form_for @weafam_setting do |f|
  - if @weafam_setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weafam_setting.errors.count, "error")} prohibited this weafam_setting from being saved:"
      %ul
        - @weafam_setting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :certain_koeff
    = f.number_field :certain_koeff
  .actions
    = f.submit 'Save'
