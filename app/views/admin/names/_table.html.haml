%table.table.table-striped
  %thead
    %tr
      %th #
      %th Имя
      %th Пол
      %th Статус
  %tbody
    - @names.each do |name|
      %tr
        %td= name.id
        %td= link_to name.name, edit_admin_name_path(name)
        %td= name.sex_id == 0 ? 'жен' : 'муж'
        %td= NameStatus.show(name.status_id)[:title]
