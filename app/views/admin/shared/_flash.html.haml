- if flash[:notice]
  .alert.alert-success
    %button.close{:type=>"button", :'data-dismiss'=>"alert"} x
    = flash[:notice]

- if flash[:alert]
  .alert.alert-danger
    %button.close{:type=>"button", :'data-dismiss'=>"alert"} x
    = flash[:alert]

- if flash[:warning]
  .alert.alert-warning
    %button.close{:type=>"button", :'data-dismiss'=>"alert"} x
    = flash[:warning]
