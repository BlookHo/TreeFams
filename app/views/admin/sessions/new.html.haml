.row
  .col-xs-12.col-md-offset-4.col-md-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Войти
      .panel-body
        = form_tag admin_sessions_path do
          .form-group
            = text_field_tag :email, params[:email], :class => 'form-control', :placeholder => 'Email'
          .form-group
            = password_field_tag :password, nil, :class => 'form-control', :placeholder => 'Password'
          .form-group
            = submit_tag "Войти", :class => 'btn btn-default'
