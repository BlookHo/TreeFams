= form_for @updates_event do |f|
  - if @updates_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@updates_event.errors.count, "error")} prohibited this updates_event from being saved:"
      %ul
        - @updates_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :image
    = f.text_area :image
  .actions
    = f.submit 'Save'
