= form_for(@name) do |f|
  - if @name.errors.any?
    #error_explanation
      %h2
        = pluralize(@name.errors.count, "error")
        prohibited this name from being saved:
      %ul
        - @name.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :only_male
    %br/
    = f.check_box :only_male
  .field
    = f.label :name_freq
    %br/
    = f.number_field :name_freq
  .actions
    = f.submit
