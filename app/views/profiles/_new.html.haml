.context-menu-form
  %h2
    Добавить
    = YandexInflect.inflections( relation_to_human(@profile.relation_id) )[3]["__content__"]

  - if flash[:alert]
    .flash.alert
      = flash[:alert]

  = form_for @profile, remote: true do |f|

    - if @questions
      = @questions.inspect

    %br

    base_profile_id
    = text_field_tag :base_profile_id, @base_profile.id
    author_profile_id
    = text_field_tag :author_profile_id
    base_relation_id
    = text_field_tag :base_relation_id
    relation_id
    = f.text_field :relation_id

    .row
      = text_field_tag :profile_name, @profile.profile_name, placeholder: "Имя...", id: :new_profile_name
      = hidden_field_tag :profile_name_id, @profile.name_id, id: :new_profile_name_id
      = f.hidden_field :relation_id

    .actions
      -#= link_to 'Отмена', '#cancel', onclick: "closeAllDropDown();", class:  [:bttn, :grey]
      = f.submit "Добавить", class: [:bttn, :green], data: { disable_with: "Подождите..." }



