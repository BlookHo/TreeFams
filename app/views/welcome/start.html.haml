#welcome-form.col_1_2
  = render 'breadcrumb'
  = form_tag :proceed_start, remote: false, id: 'welcome_form' do
    .body
      = render "welcome/form/#{current_step}"
    .footer
      - if last_step?
        "Пока отсанавливаемся тут"
      - else
        = link_to '&larr; Назад'.html_safe, :previous, class: [:btn], id: :prev

        - unless current_step =~ /^have/
          = submit_tag 'Вперед &rarr;'.html_safe, class: [:btn, :blue], id: :next, style:"float:right;"



.col_2_2{style:'margin-top:100px;'}
  -#  временно для жени
  %h4 Содержание переменной @profiles_json
  %br
  - @profiles_json = "{'author':#{current_author.to_json.to_s}}"
  .small= @profiles_json
