-# default start form
- if eval("current_author.family.#{current_step}.empty?")
  .control
    = text_field_tag "author[#{current_step}][][name]", '', class: :autocomplete_field, placeholder: "Имя брата...", data:{names: Name.approved.male.map{|n| n.name}}
    .help-text Официальное имя, как в паспорте

- eval("current_author.family.#{current_step}").each do |brother|
  = render 'welcome/form/member_error', objekt: brother

  .control
    = text_field_tag "author[brothers][][name]", brother.name, class: :autocomplete_field, placeholder: "Имя брата...", data:{names: Name.approved.male.map{|n| n.name}}
    .help-text Официальное имя, как в паспорте
