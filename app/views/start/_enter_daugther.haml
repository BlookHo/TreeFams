%h3 Ввод информации о ДОЧЕРЯХ
= form_tag(store_daugther_path, remote: true, id: 'daugther_form') do
  %div
    %div
      = label_tag 'Есть дочери? Нажми кнопку'
      = radio_button_tag :more_daugthers_exist?, "yes", false
    %div
      = label_tag 'Нет? Далее'
      = radio_button_tag :more_daugthers_exist?, "no more", false
  %div
    = label_tag 'Введи имя дочери:'
    %div
      = select_tag :daugther_name_select, options_for_select(@sel_names_female, selected = @daugther_name),  :prompt => 'Выбери имя'
  = submit_tag 'Ввод'

%h5 @dialog_message: #{@dialog_message.inspect}
%h5 @render_name: #{@render_name.inspect}
%h5 @params: #{params[:daugther_name_select].inspect}
