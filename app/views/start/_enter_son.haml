%h3 Ввод информации о СЫНЕ
= form_tag(store_son_path, remote: true, id: 'son_form') do
  %div
    %div
      = label_tag 'Есть сыновья? Нажми кнопку'
      = radio_button_tag :more_sons_exist?, "yes", false
    %div
      = label_tag 'Нет. Далее'
      = radio_button_tag :more_sons_exist?, "no more", false
  %div
    = label_tag 'Введи имя Сына:'
    %div
      = select_tag 'son_name_select', options_for_select(@sel_names_male, selected = @son_name),  :prompt => 'Выбери имя'
  = submit_tag 'Ввод'

%h5 @dialog_message: #{@dialog_message.inspect}
%h5 @render_name: #{@render_name.inspect}
%h5 @params: #{params[:son_name_select].inspect}
