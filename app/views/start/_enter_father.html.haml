.father_container
  %h2 Ввод информации об ОТЦЕ
  = form_tag({ :controller => "start", :action => "store_father"}) do
    %div
      %h2 2.Имя Отца
      = label_tag 'Введи имя Отца:'
      %div
        = select_tag 'father_name_select', options_for_select(@sel_names_male, selected = @father_name),  :prompt => 'Выбери имя'
    = submit_tag 'Ввод'
  %p
    Имя Отца: @father_name: #{@father_name.inspect}, я - #{@father_sex.inspect}
  %p
    @user_sex: #{@user_sex.inspect}
