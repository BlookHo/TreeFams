#header
  .container
    = link_to "Мы все &mdash; родня".html_safe, "/home", id: :logo

    %ul
      - if current_user
        %li= link_to 'Уведомления', '#', class: :notifications

        - if @new_messages_count.blank? || @new_messages_count == 0
          %li= link_to raw(" Сообщения <i class='icon-envelope-alt'></i> <strong>(#{@new_messages_count})</strong>"), show_all_messages_path, :class => "ttip", title: "Мои сообщения"
        - elsif  @new_messages_count > 9
          %li= link_to raw("Сообщения <i class='icon-envelope-alt'></i> <strong>(*)</strong>"), show_all_messages_path, :class => "ttip", title: "У тебя есть новые сообщения"
        - else
          %li= link_to raw("Сообщения <i class='icon-envelope-alt'></i> <strong>(#{@new_messages_count})</strong>"), show_all_messages_path, :class => "ttip", title: "У тебя есть новые сообщения"

        %li= link_to 'Выйти', :logout,  class: :logout
      - else
        %li= link_to 'Войти', :login,   class: :login
        %li= link_to 'Зарегистрироваться', :start,   class: :login
