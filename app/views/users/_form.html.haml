= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :profile_id
    %br/
    = f.number_field :profile_id
  .field
    = f.label :admin
    %br/
    = f.check_box :admin
  .field
    = f.label :rating
    %br/
    = f.text_field :rating
  .actions
    = f.submit
