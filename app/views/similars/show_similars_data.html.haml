  - if @paged_similars_data.blank?
    %table
      %tr
        %td.left.grey.italic
          "Похожих" - нет! И это - неплохо...
  - else
    %h1 Внимание! Найдены следующие пары "похожих" родственников:
    %table
      %tr
        %th Первый профиль
        %th Первое имя
        -#%th Пол первого
        %th Родство первого
        %th С кем родство первого

        %th Второй профиль
        %th Второе имя
        -#%th Пол второго
        %th Родство второго
        %th С кем родство второго

        %th Общие отношения
        %th Мощность общности
        -#%th Общие из необщих
        -#%th Объединить? (Ваше решение)

      - @paged_similars_data.each do |similars_data|
        %tr
          %td= similars_data[:first_profile_id]
          %td= similars_data[:first_name_id]
          -#%td= similars_data[:first_sex_id]#.inspect
          %td= similars_data[:first_relation_id]  #
          %td= similars_data[:name_first_relation_id] #

          %td= similars_data[:second_profile_id]
          %td= similars_data[:second_name_id]#
          -#%td= similars_data[:second_sex_id]
          %td= similars_data[:second_relation_id] #
          %td= similars_data[:name_second_relation_id]

          %td= similars_data[:common_relations]
          %td= similars_data[:common_power]
          -#%td= similars_data[:inter_relations]
          -#%td
          -#  .yes_to_connect
          -#    = link_to 'Да', connect_similars_path( first_profile_id: similars_data[:first_profile_id], second_profile_id: similars_data[:second_profile_id]), method: :post, remote: true, class: [:bttn, :green], id: 'connectSimilars', data:{disabled_with:"Wait"}
          -#  -#%br
          -#  .no_to_connect
          -#    -#= link_to 'Нет', keep_disconnected_similars_path( first_profile_id: similars_data[:first_profile_id], second_profile_id: similars_data[:second_profile_id]), method: :post, remote: true, class: [:bttn, :red], id: 'keepUnSimilars'
          -#    = link_to 'Нет', home_path, class: [:bttn, :red]

    %h1 Объединить найденные пары "Похожих"? (Ваше решение)
    = link_to 'Да - объединить', connect_similars_path( first_profile_id: @paged_similars_data[0][:first_profile_id], second_profile_id: @paged_similars_data[0][:second_profile_id]), method: :post, remote: true, class: [:bttn, :green], id: 'connectSimilars', data:{disabled_with:"Wait"}
    = link_to 'Нет - к просмотру дерева', home_path, class: [:bttn, :red]

    = paginate @paged_similars_data


  %br
  %br

