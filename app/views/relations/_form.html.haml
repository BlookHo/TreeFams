= form_for(@relation) do |f|
  - if @relation.errors.any?
    #error_explanation
      %h2
        = pluralize(@relation.errors.count, "error")
        prohibited this relation from being saved:
      %ul
        - @relation.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :relation
    %br/
    = f.text_field :relation
  .actions
    = f.submit
